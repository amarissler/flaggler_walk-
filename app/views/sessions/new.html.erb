<div class="container-fluid text-center">
  <div class="row">
    <div class="uploaderbox login">
      <h1>Log in </h1>
      <%= form_tag login_path do %>
      <%#= form_tag sessions_path do %>
        <p>
          <%= label_tag :username %>
          <%= text_field_tag :username %>
        </p>

        <p>
          <%= label_tag :password %>
          <%= password_field_tag :password %>
        </p>

      <p>
        <%= submit_tag 'Log in' %>
      </p>

      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="uploaderbox signup">
      <h1> Sign up</h1>
      <%= render 'form' %>
    </div>
  </div>
</div>
